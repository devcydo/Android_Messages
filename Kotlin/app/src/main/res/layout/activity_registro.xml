<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistroActivity">

    <ImageView
            android:id="@+id/imageViewUsr"
            android:layout_width="133dp"
            android:layout_height="110dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:srcCompat="@drawable/avataricon1" tools:srcCompat="@drawable/avataricon1"
            android:scaleType="fitCenter"/>
    <TextView
            android:text="Nombre:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewUsr" android:textSize="22sp"
            app:layout_constraintHorizontal_bias="0.036"/>

    <EditText
            android:id="@+id/editNombre"
            android:layout_width="200dp" android:layout_height="40dp"
            android:contentDescription="Ingresa tu nombre"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="8dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewUsr" app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
            android:text="Numero:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textSize="22sp"
            app:layout_constraintHorizontal_bias="0.036"/>

    <EditText
            android:id="@+id/editNumero"
            android:layout_width="200dp" android:layout_height="40dp"
            android:contentDescription="Ingresa tu numero"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/editNombre" app:layout_constraintHorizontal_bias="1.0"
            android:inputType="number"/>

    <TextView
            android:text="Frase:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:textSize="22sp"
            app:layout_constraintHorizontal_bias="0.127"/>

    <EditText
            android:id="@+id/editFrase"
            android:layout_width="200dp" android:layout_height="40dp"
            android:contentDescription="Ingresa tu numero"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/editNumero" app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"/>

    <Button
            android:id="@+id/btnGuardar"
            android:text="G U A R D A R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.431"/>

</android.support.constraint.ConstraintLayout>