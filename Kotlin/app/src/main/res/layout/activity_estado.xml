<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EstadoActivity">

    <android.support.v7.widget.RecyclerView
            android:layout_width="305dp"
            android:layout_height="288dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintVertical_bias="1.0" android:id="@+id/recyclerOwnEstados"/>
    <TextView
            android:text="Mis estados:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerOwnEstados" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="+"
            android:layout_width="44dp"
            android:layout_height="49dp"
            android:id="@+id/btnNuevoEstado" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/editTextnuevoEstado"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0" android:textSize="24sp"/>

    <EditText android:layout_width="253dp" android:layout_height="50dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" android:layout_marginTop="44dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
              android:id="@+id/editTextnuevoEstado"/>
    <TextView
            android:text="Nuevo estado:"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:id="@+id/textView7" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextnuevoEstado" app:layout_constraintHorizontal_bias="0.037"
            app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>